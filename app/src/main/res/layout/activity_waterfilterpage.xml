<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".waterfilterpage">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:ignore="MissingConstraints"
        android:background="@color/colorbg">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/colorblue"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorblue">

            <ImageView
                android:id="@+id/home"
                android:layout_width="72dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/arrowtoright"
                tools:layout_editor_absoluteX="37dp"
                tools:layout_editor_absoluteY="125dp" />

            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/home"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="135dp"
                android:layout_marginEnd="39dp"
                android:fontFamily="@font/kanit_medium"
                android:text="เครื่องแยกน้ำ"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/colortext"
                android:textSize="20sp"
                tools:ignore="UnknownId" />

        </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            style="@style/AppThemeHioi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorblue"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabTextAppearance="@style/TextAppearance.AppCompat.Title" />
    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="959dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent">

    <android.support.v7.widget.CardView
        android:id="@+id/produg1"
        android:layout_width="372dp"
        android:layout_height="167dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="344dp"
            android:layout_height="151dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="127dp"
                android:layout_height="114dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/water_purifier" />

            <LinearLayout
                android:layout_width="263dp"
                android:layout_height="93dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/produgname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/kanit_medium"
                    android:text="เครื่องแยกน้ำ PSI"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/free"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/kanit_medium"
                    android:text="Safety"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_below="@+id/produgnull"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/kanit_semibold"
                    android:text="ราคา 9,900"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>