<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".satellite2">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/colorbg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="699dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.CardView
                android:id="@+id/produg1"
                android:layout_width="372dp"
                android:layout_height="167dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="82dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.13"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="344dp"
                    android:layout_height="151dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="139dp"
                        android:layout_height="61dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/okx" />

                    <LinearLayout
                        android:layout_width="263dp"
                        android:layout_height="93dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/produgname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:fontFamily="@font/kanit_medium"
                            android:text="กล่องรับสัญญาณOK X"

                            android:textAlignment="textStart"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:layout_below="@+id/produgnull"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/kanit_semibold"
                            android:text="ราคา 690"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/produg2"
                android:layout_width="372dp"
                android:layout_height="167dp"
                android:layout_columnWeight="1"
                android:layout_below="@+id/produg1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/produg1"
                app:layout_constraintVertical_bias="0.00999999"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="344dp"
                    android:layout_height="151dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="142dp"
                        android:layout_height="61dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/s2" />

                    <LinearLayout
                        android:layout_width="263dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/produgname2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:fontFamily="@font/kanit_medium"
                            android:text="กล่องรับสัญญาณ S2"
                            android:textAlignment="textStart"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/price2"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:layout_below="@+id/produgnull"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/kanit_semibold"
                            android:text="ราคา 890"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/produg3"
                android:layout_width="372dp"
                android:layout_height="165dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_below="@+id/produg2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/produg2"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="344dp"
                    android:layout_height="151dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="141dp"
                        android:layout_height="97dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/s3" />


                    <LinearLayout
                        android:layout_width="263dp"
                        android:layout_height="73dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/produgname3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:fontFamily="@font/kanit_medium"
                            android:text="กล่องรับสัญญาณ S3"
                            android:textAlignment="textStart"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/price3"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:layout_below="@+id/produgnull"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/kanit_semibold"
                            android:text="ราคา 2,200"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <!--ทำ scolling หนเ้า-->
        <android.support.v4.view.ViewPager
            android:id="@+id/htab_viewpager"
            android:layout_width="412dp"
            android:layout_height="624dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="92dp" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>